<div className="container">
  <div className="row justify-content-center">
    <div class="col-md-4 offset-md-4 col-sm-8 offset-sm-2 col-10">
      <div class="metric-box">
        <%= devise_error_messages! %>
        <h2>Too Fit To Quit</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class:"form-horizontal" }) do |f| %>
          <div class="form-group">
            <div class="col">
              <%= f.email_field :email, { class: 'form-control', placeholder: 'Email', autofocus: true } %>
            </div>
          </div>
          <div class="form-group">
            <div class="col">
              <%= f.password_field :password, { class: 'form-control', placeholder: 'Password', autocomplete: "off" } %>
            </div>
          </div>
          <div class="form-group">
            <div class="col">
              <%= f.password_field :password_confirmation, { class: 'form-control', placeholder: 'Password Confirmation', autocomplete: "off" } %>
            </div>
          </div>
          <div class="form-group">
            <div class="col">
              <%= f.submit "Sign up", { class: 'btn btn-primary col-sm-12' } %>
            </div>
          </div>
          <div class="form-group">
            <div class="col">
              Already have an account? <%= link_to('Log in', signin_path) %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
