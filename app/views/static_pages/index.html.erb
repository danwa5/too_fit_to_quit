<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

<div class="page-header">
  <h2>Runs</h2>
</div>

<div class="activity-form">
  <%= form_tag(index_path, method: :get, class: 'form-inline') do |f| %>
    <div class="form-group">
      <%= label_tag :after_date, 'Runs on or after' %>&nbsp;
      <%= text_field_tag :after_date, (@runs_options[:date] || Date.today), { class: 'form-control' } %>
    </div>
    <div class="form-group">
      <div class="form-group">
        <%= submit_tag 'Display', class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>

<% if @runs_data.present? %>
  <div style='width: 800px;'>
    <div id="map" style='width: 800px; height: 400px;'></div>
  </div>

  <div class="row">
    <div class="col-sm-8">
      <table id="steps-table" class="table table-condensed">
        <thead>
          <tr>
            <th>Date</th>
            <th>Distance (miles)</th>
            <th>Duration</th>
            <th>Pace (min/mile)</th>
            <th>Steps</th>
            <th>Log ID</th>
          </tr>
        </thead>
        <tbody>
        <% @runs_data.each do |run_data| %>
          <tr>
            <td><%= run_data.start_time %></td>
            <td><%= format_distance(run_data.distance) %></td>
            <td><%= format_duration(run_data.duration) %></td>
            <td><%= format_pace(run_data.duration, run_data.distance) %></td>
            <td><%= run_data.activity.steps %></td>
            <td><%= run_data.uid %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>


<script type="text/javascript">
var handler = Gmaps.build('Google');
var provider_options = { mapTypeId: google.maps.MapTypeId.TERRAIN, scrollwheel: false };
handler.buildMap({
    provider: {
      disableDefaultUI: true
      // pass in other Google Maps API options here
    },
    internal: {
      id: 'map'
    }
  },
  function(){
    var json_array = <%=raw @loc_arr.to_json %>;

    // markers = handler.addMarkers(json_array);
    var polylines = handler.addPolylines(
      [ json_array ],
      { strokeColor: '#FF0000', strokeWeight: 2, strokeOpacity: 0.8 }
    );
    // handler.bounds.extendWith(markers);
    handler.bounds.extendWith(polylines);
    handler.fitMapToBounds();
  }
);
</script>


