<div class="page-header">
  <h2><%= current_user.email %></h2>
</div>

<!-- Nav Tabs -->
<ul id="activity-tabs" class="nav nav-tabs">
  <li role="presentation" class="active">
    <a href="#steps" id="steps-tab" role="tab" data-toggle="tab" aria-controls="home" aria-expanded="true">Steps</a>
  </li>
  <li role="presentation">
    <a href="#runs" id="runs-tab" role="tab" data-toggle="tab" aria-controls="home" aria-expanded="true">Runs</a>
  </li>
</ul>

<!-- Tab Panes -->
<div class="tab-content">
  <div role="tabpanel" class="tab-pane active" id="steps">
    <%= form_tag(index_path, method: :get, class: 'form-inline') do |f| %>
      <div class="form-group">
        <%= label_tag :steps, 'Daily steps for' %>&nbsp;
        <%= select_tag :steps, options_for_select(fitbit_periods, @options[:period]), { class: 'form-control' } %>
      </div>
      <div class="form-group">
        <%= label_tag :date, 'ending on' %>&nbsp;
        <%= text_field_tag :date, (@options[:date] || Date.today), { class: 'form-control' } %>
      </div>
      <div class="form-group">
        <div class="form-group">
          <%= submit_tag 'Display', class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>

    <% if @steps_data.present? %>
      <div class="row">
        <div class="col-sm-6">
          <table id="steps-table" class="table table-condensed">
            <thead>
              <tr>
                <th>Date</th>
                <th>Steps</th>
              </tr>
            </thead>
            <tbody>
            <% @steps_data.each do |step_data| %>
              <tr>
                <td><%= format_date(step_data['dateTime']) %></td>
                <td><%= step_data['value'] %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>
  </div>
  <div role="tabpanel" class="tab-pane" id="runs">
    <%= form_tag(index_path, method: :get, class: 'form-inline') do |f| %>
      <div class="form-group">
        <%= label_tag :after_date, 'Runs on or after' %>&nbsp;
        <%= text_field_tag :after_date, (@runs_options[:date] || Date.today), { class: 'form-control' } %>
      </div>
      <div class="form-group">
        <div class="form-group">
          <%= submit_tag 'Display', class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>

  </div>
</div>
