<% if user_signed_in? %>
  Hello <%= current_user.email %> <%= link_to "Logout", destroy_user_session_path, method: :delete %> <hr>
<% else %>
  <%= link_to "Signup",new_user_registration_path %>
<% end %>

<ul class="nav nav-tabs">
  <li role="presentation" class="active"><a href="#">Steps</a></li>
  <li role="presentation"><a href="#">Runs</a></li>
</ul>

<div class="row">
  <div class="col-sm-12" style="margin-top: 20px; margin-bottom: 75px;">
    <%= form_tag(index_path, method: :get, class: 'form-inline') do |f| %>
      <div class="form-group">
        <%= label_tag :steps, 'Daily steps for' %>&nbsp;
        <%= select_tag :steps, options_for_select(fitbit_periods, @options[:period]), { class: 'form-control' } %>
      </div>
      <div class="form-group">
        <%= label_tag :date, 'ending on' %>&nbsp;
        <%= text_field_tag :date, (@options[:date] || Date.today), { class: 'form-control' } %>
      </div>
      <div class="form-group">
        <div class="form-group">
          <%= submit_tag 'Display', class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<% if @steps_data.present? %>
<div class="row">
  <div class="col-sm-4">
    <table class="table table-condensed">
      <thead>
        <tr>
          <th>Date</th>
          <th>Steps</th>
        </tr>
      </thead>
      <tbody>
      <% @steps_data.each do |step_data| %>
        <tr>
          <td><%= format_date(step_data['dateTime']) %></td>
          <td><%= step_data['value'] %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<% end %>

<%= render partial: 'devise/shared/links' if user_signed_in? %>
<%#= render 'devise/shared/links' %>